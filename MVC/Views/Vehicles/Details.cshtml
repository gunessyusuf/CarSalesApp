@model VehicleModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Vehicle Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    
    <hr />
    <dl class="row">
       
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Model.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Color.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.PriceDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.PriceDisplay)
        </dd>
        
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.IsSold)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.IsSold)
        </dd>       
        
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.CustomerDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.CustomerDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.ImgSrcDisplay)
        </dt>
        <dd class="col-10">
            @if(Model.ImgSrcDisplay is not null)
            {
                <img src="@Model.ImgSrcDisplay" class="img-fluid"/>
            }
            else
            {
                <i class="fa-regular fa-image" title="No Image"></i>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to Vehicle List</a>
</div>



