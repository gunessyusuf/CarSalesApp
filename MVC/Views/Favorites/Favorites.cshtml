@model IEnumerable<FavoritesModel>
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Favorites List";
}

<p>
	<a asp-action="ClearFavorites">Clear All</a>
</p>

@if(Model is not null && Model.Count() > 0)
{
	string favoritesCount = Model.Count() == 1 ? "1 favorite found." : Model.Count() + " favorites found.";
	<p class="bg-secondary form-control-plaintext">
		@favoritesCount
	</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandDisplay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelDisplay)
            </th>
				<th>
					@Html.DisplayNameFor(model => model.PriceDisplay)
				</th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.BrandDisplay)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ModelDisplay)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.PriceDisplay)
					</td>
					<td>
						<a asp-action="RemoveFromFavorites" asp-route-vehicleId="@item.VehicleId" asp-route-userId="@item.UserId">Remove</a>
						
					</td>
				</tr>
		}
    </tbody>
</table>
}
else
{
	<p class="bg-secondary text-black">
		No favorites found.
	</p>
}



