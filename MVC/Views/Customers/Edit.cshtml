@using DataAccess.Enums;
@model CustomerModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit Customer";
}


<hr />
<span class="text-danger"><h4>Please fill all required fields marked with *</h4></span>
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label">Name<span class="text-danger"> *</span></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Surname" class="col-2 col-form-label">Surname<span class="text-danger"> *</span></label>
				<div class="col-5">
					<input asp-for="Surname" class="form-control" />
					<span asp-validation-for="Surname" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="CustomerDetail.Sex" class="col-2 col-form-label">Sex<span class="text-danger"> *</span></label>
                <div class="col-4 pt-2">

                    <div class="form-check-inline">
                        <input asp-for="CustomerDetail.Sex" type="radio" value="@((int)Sex.Woman)" checked class="form-check-input" id="woman" /> <label for="woman" class="form-check-label">@Sex.Woman</label>
                    </div>
                    <div class="form-check-inline">
                        <input asp-for="CustomerDetail.Sex" type="radio" value="@((int)Sex.Man)" class="form-check-input" id="man" /> <label for="man" class="form-check-label">@Sex.Man</label>
                    </div>
                </div>

            </div>

            <div class="row mb-3">
                <label asp-for="CustomerDetail.Email" class="col-2 col-form-label">E-mail<span class="text-danger"> *</span></label>
                <div class="col-4">
                    <input asp-for="CustomerDetail.Email" class="form-control" />
                    <span asp-validation-for="CustomerDetail.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="CustomerDetail.Phone" class="col-2 col-form-label"></label>
                <div class="col-4">
                    <input asp-for="CustomerDetail.Phone" class="form-control" />
                    <span asp-validation-for="CustomerDetail.Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="CustomerDetail.Country" class="col-2 col-form-label">Country<span class="text-danger"> *</span></label>
                <div class="col-4">
                    <select asp-for="CustomerDetail.CountryId" class="form-select" asp-items="ViewBag.Countries" id="countries">
                        <option value="">-- Select Country --</option>
                    </select>
                    <span asp-validation-for="CustomerDetail.CountryId" class="text-danger countriesmessage"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="CustomerDetail.City" class="col-2 col-form-label">City<span class="text-danger"> *</span></label>
                <div class="col-4">
                    <select asp-for="CustomerDetail.CityId" class="form-select" asp-items="ViewBag.Cities" id="cities">
                        <option value="">-- Select City --</option>
                    </select>
                    <span asp-validation-for="CustomerDetail.CityId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="CustomerDetail.Address" class="col-2 col-form-label">Adress<span class="text-danger"> *</span></label>
                <div class="col-4">
                    <textarea asp-for="CustomerDetail.Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="CustomerDetail.Address" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to Customer List</a>
				</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <script src="/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>


    <script>
        $(function () {

            $("#countries").off("change");


            $("#countries").change(function () {

                $("#cities").empty();

                $(".countriesmessage").text("");

                var selectedCountryId = $("#countries").val();

                if (selectedCountryId == "") {

                    $(".countriesmessage").text("Please select a country...");

                    $("#cities").append('<option value="">-- Select Country --</option>');

                } else {

                    $.getJSON(

                        "/Cities/GetCities",

                        { countryId: selectedCountryId },

                        function (cities) {

                            $("#cities").append('<option value="">-- Select City --</option>');

                            for (const city of cities) {

                                $("#cities").append('<option value="' + city.id + '">' + city.name + '</option>');


                            }
                        }

                    );



                }

            });




        });
    </script>


    <partial name="_ValidationScriptsPartial" />
}


