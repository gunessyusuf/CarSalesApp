@{
    ViewData["Title"] = @AppSettings.Title;
}

<div class="text-center">
    @if (!User.Identity.IsAuthenticated)
    {
        <h1 class="display-4">Car Sales</h1>
        <p>Welcome to @AppSettings.Title</p>
    }
    else
    {
        <p>
            Welcome to @AppSettings.Title @User.Identity.Name!
        </p>
    }
</div>
