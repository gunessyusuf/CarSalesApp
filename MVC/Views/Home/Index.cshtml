@{
    ViewData["Title"] = @AppSettings.Title;
}

<div class="top-menu1">
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="welcome-section">
            <h1 class="display-4">Welcome to AutoPro</h1>
            <h3>Stay with us for an amazing experience!</h3>
        </div>
    }
    else
    {
        <p>
            Hello,  @User.Identity.Name!
        </p>
    }

    <img src="/Images/dod1.jpg" alt="Logo" class="logo-img">
</div>




<section id="image-slider">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
             <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
           
        </ol>

        <!-- Slides -->
        <div class="carousel-inner">
            <!-- Slide 1 (active) -->
            <div class="carousel-item active">
                <img src="/Images/Audi A3 Sedan 35 TFSI Dynamic.jpg" alt="Slide 1" style="width: 1200px; height: 800px">
                <!-- You can customize the image source and content here -->
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="/Images/E 180 Elite  silver gray.jpg" alt="Slide 2" style="width: 1200px; height: 800px">
                <!-- You can customize the image source and content here -->
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="/Images/E 250 CDI Edition.jpeg" alt="Slide 2" style="width: 1200px; height: 800px">
                <!-- You can customize the image source and content here -->
            </div>

            <!-- Slide 4 -->
            <div class="carousel-item">
                <img src="/Images/C 200 Edition grey.jpg" alt="Slide 2" style="width: 1200px; height: 800px">
                <!-- You can customize the image source and content here -->
            </div>
            <!-- Slide 5 -->
            <div class="carousel-item">
                <img src="/Images/Opel Insignia.jpeg" alt="Slide 2" style="width: 1200px; height: 800px">
                <!-- You can customize the image source and content here -->
            </div>
            
        </div>

        <!-- Controls -->
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>


