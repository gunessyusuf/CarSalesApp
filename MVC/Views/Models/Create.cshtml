@model ModelModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create Model";
}

<h1>@ViewData["Title"]</h1>



<hr />
<span class="text-danger"><h4>Please fill all required fields marked with *</h4></span>
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
				<label asp-for="Name" class="col-2 col-form-label">Name<span class="text-danger"> *</span></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
				<label asp-for="Brand" class="col-2 col-form-label ">Brand<span class="text-danger"> *</span></label>
				<div class="col-5">
					<select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="BrandId" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to Model List</a>
				</div>
            </div>
        </form>
    </div>
</div>




