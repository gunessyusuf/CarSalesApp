@using MVC.Settings;
@model AccountLoginModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Login";
}

<img src="/Images/background-car.jpg" alt="Back Ground Image" id="back-ground-image">

<!-- CSS ile resmin boyutunu ve konumunu ayarla -->
<style>
    #back-ground-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover; /* Resmi sayfanın tamamına yaymak için */
        z-index: -1; /* Resmi sayfanın arkasına taşır */
        opacity: 0.5; /* İsteğe bağlı olarak resmin şeffaflığını ayarla */
    }
</style>


    <div class="logo">
        <img src="/Images/autopro.png" alt="AutoPro Logo">
       
        <h3> Welcome to @AppSettings.Title</h3>
    </div>


<div class="container d-flex justify-content-center align-items-center" style="min-height: 20vh;">
    <div class="row">
        <div class="col-12">
            <form asp-action="Login">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row mb-3">
                    <label asp-for="UserName" class="col-3 col-form-label"></label>
                    <div class="col-7">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Password" class="col-3 col-form-label"></label>
                    <div class="col-7">
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <input asp-for="ReturnUrl" type="hidden" />

                <div class="row mb-3">
                    <div class="offset-4 col-7">
                        <input type="submit" value="Login" class="btn btn-success" />

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




